<h2>DETALLES DE LA MOVIE</h2>
<article>
    <h2>Title: {{title}}</h2>
    <h2>Genre: {{genre}}</h2>
    <h2>Plot: {{plot}}</h2>
    <p> Cast:</p>
    {{#each cast}}
    <ul>
        <li>{{name}}</li>
    </ul>
    {{/each}}
</article>
<a href="/movies/{{_id}}/edit" class="btn btn-dark">Edit movie</a>
<form action="/movies/{{_id}}/delete" method="POST">
    <input type="submit" value="Delete" class="btn btn-sm btn-danger">
</form>